{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "make debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Rebuild Debug",
            "type": "shell",
            "command": "make cleandebug; make debug",
            "group": "build",
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "make release",
            "group": "build",
        },
        {
            "label": "Rebuild Release",
            "type": "shell",
            "command": "make cleanrelease, make release",
            "group": "build",
        },
        {
            "label": "Run Debug",
            "type": "shell",
            "command": "./sandbox_debug",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "Build Debug",
        },
        {
            "label": "Run Release",
            "type": "shell",
            "command": "./sandbox",
            "group": "test",
            "dependsOn": "Build Release"
        },
    ]
}